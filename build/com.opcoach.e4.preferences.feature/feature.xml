<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="com.opcoach.e4.preferences.feature"
      label="e4 Preferences"
      version="1.3.0"
      provider-name="OPCOACH">

   <description url="https://github.com/opcoach/e4Preferences">
      This feature contains a plugin to manage preferences in a pure
E4 application, using an extension point.
It provides also a model fragment to add automaticaly the Preference command in the Window menu (optional)
   </description>

   <copyright url="http://www.example.com/copyright">
      [Enter Copyright Description here.]
   </copyright>

   <license url="https://www.eclipse.org/legal/epl-v10.html">
      This plugin is delivered under Eclipse Public License
   </license>

   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.e4.core.di"/>
      <import plugin="org.eclipse.e4.core.services"/>
      <import plugin="org.eclipse.e4.core.contexts"/>
      <import plugin="org.eclipse.e4.ui.services"/>
      <import plugin="org.eclipse.core.commands"/>
      <import plugin="org.eclipse.e4.ui.model.workbench"/>
      <import plugin="org.eclipse.e4.ui.workbench"/>
      <import plugin="com.opcoach.e4.preferences"/>
   </requires>

   <plugin
         id="com.opcoach.e4.preferences"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="com.opcoach.e4.preferences.mainmenu"
         download-size="0"
         install-size="0"
         version="0.0.0"
         fragment="true"
         unpack="false"/>

</feature>
